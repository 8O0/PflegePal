<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="346.0" prefWidth="322.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AddPatientController">
   <top>
      <Label text="Add Patient" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="20.0" />
         </padding>
         <font>
            <Font size="18.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox prefHeight="211.0" prefWidth="156.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="50.0" prefWidth="600.0">
               <children>
                  <Label text="Firstname">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin></Label>
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="600.0">
               <children>
                  <Label text="Lastname">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="600.0">
               <children>
                  <Label text="Age">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="600.0">
               <children>
                  <Label text="Illness">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <right>
      <VBox prefHeight="210.0" prefWidth="216.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="50.0" prefWidth="444.0">
               <children>
                  <TextField fx:id="firstname" />
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="444.0">
               <children>
                  <TextField fx:id="lastname" />
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="444.0">
               <children>
                  <TextField fx:id="age" />
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="444.0">
               <children>
                  <TextField fx:id="illness" />
               </children>
            </HBox>
         </children>
      </VBox>
   </right>
   <bottom>
      <HBox prefHeight="60.0" prefWidth="322.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmit" text="Submit">
               <HBox.margin>
                  <Insets left="20.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="Cancel">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
